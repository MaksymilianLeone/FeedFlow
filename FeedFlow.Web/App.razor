@using FeedFlow.Web.Pages.Shared
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <!-- Use a unique Context name to avoid clashes -->
                <NotAuthorized Context="notAuthData">
                    <AuthorizeView>
                        <!-- Signed-in but lacks permission -->
                        <Authorized>
                            <p class="text-danger">You are not authorized to view this page.</p>
                        </Authorized>
                        <!-- Not signed in: redirect to Identity login -->
                        <NotAuthorized>
                            <RedirectToLogin />
                        </NotAuthorized>
                    </AuthorizeView>
                </NotAuthorized>
                <Authorizing>
                    <p>Authorizing...</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there’s nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
